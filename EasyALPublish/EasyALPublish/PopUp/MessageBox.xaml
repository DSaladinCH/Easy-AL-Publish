<Window x:Class="EasyALPublish.PopUp.MessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyALPublish.PopUp"
        mc:Ignorable="d"
        Style="{StaticResource NoResizeWindow}"
        Title="{Binding Title}" Height="210" Width="400" ResizeMode="NoResize">
    <Grid Background="{DynamicResource BackgroundC}">
        <Grid Margin="15,0,15,15">
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="*" />
                <RowDefinition Height="40" />
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Content="{Binding Title}" FontSize="17" FontWeight="Bold" VerticalContentAlignment="Center" Padding="0" />
            <TextBlock Name="tbl_message" Grid.Row="1" TextWrapping="Wrap" Text="Are you sure?"/>
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="OK" Width="70" FontSize="13" Padding="0,0,0,0" Margin="0,0,0,0" Click="Close_Click" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
