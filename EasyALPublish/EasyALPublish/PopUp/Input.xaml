<Window x:Class="EasyALPublish.PopUp.Input"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyALPublish.PopUp"
        mc:Ignorable="d"
        Style="{DynamicResource DefaultWindow}"
        Title="{Binding Title}" Height="150" Width="400" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label Name="lbl_title" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="15,10,15,5" Grid.Row="0" />
        <TextBox Name="tbx_input" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="15,15,15,15" Grid.Row="1" FontSize="15"
                 Text="{Binding InputText, Mode=TwoWay}"/>
    </Grid>
</Window>
